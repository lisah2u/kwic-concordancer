{
  "name": "kwic-concordancer",
  "version": "1.0.0",
  "description": "A modern corpus linguistics tool built with FastAPI and vanilla JavaScript, designed for classroom use and linguistic analysis.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-css": "tailwindcss -i ./src/input.css -o ./static/tailwind.css --minify",
    "watch-css": "tailwindcss -i ./src/input.css -o ./static/tailwind.css --watch",
    "dev": "uv run uvicorn concordance_api:app --reload",
    "test-api": "uv run pytest test_concordance.py -v",
    "build": "npm run build-css",
    "deploy-netlify": "npm run build-css && netlify deploy --prod --dir=static",
    "preview-netlify": "npm run build-css && netlify deploy --dir=static"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lisah2u/kwic-concordancer.git"
  },
